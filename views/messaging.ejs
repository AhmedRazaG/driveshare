<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Messaging - DriveShare</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-light">
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="/dashboard">DriveShare</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><a class="nav-link" href="/messaging/compose">Compose Message</a></li>
      </ul>
    </div>
  </nav>

  <div class="container mt-4">
    <h2 class="mb-4">Messaging Inbox</h2>
    <% if (messages.length === 0) { %>
      <p>No messages yet.</p>
    <% } else { %>
      <div class="list-group">
        <% messages.forEach(function(message) { %>
          <div class="list-group-item">
            <h5 class="mb-1">
              From: <%= message.senderId %> &nbsp;|&nbsp; To: <%= message.receiverId %>
            </h5>
            <p class="mb-1"><%= message.content %></p>
            <small><%= message.timestamp.toLocaleString() %></small>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>
