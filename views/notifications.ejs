<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Notifications - DriveShare</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .notification-item {
      border-left: 4px solid #007bff;
      margin-bottom: 10px;
      transition: all 0.3s ease;
    }
    .notification-item:hover {
      background-color: #f8f9fa;
    }
    .notification-time {
      font-size: 0.8rem;
      color: #6c757d;
    }
    .notification-empty {
      text-align: center;
      padding: 30px;
      color: #6c757d;
    }
    .notification-icon {
      margin-right: 10px;
      color: #007bff;
    }
  </style>
</head>
<body class="bg-light">
  <%- include('partials/header') %>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2>Your Notifications</h2>
          <% if(notifications.length > 0) { %>
            <span class="badge badge-primary badge-pill"><%= notifications.length %> notifications</span>
          <% } %>
        </div>
        
        <% if(notifications.length === 0){ %>
          <div class="notification-empty">
            <h4>No notifications yet</h4>
            <p>You'll see notifications here when you receive messages, bookings, or other updates.</p>
          </div>
        <% } else { %>
          <div class="list-group">
            <% notifications.forEach(function(notif){ %>
              <div class="list-group-item notification-item">
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1">
                    <i class="fas fa-bell notification-icon"></i>
                    <%= notif.notification %>
                  </h5>
                  <small class="notification-time"><%= new Date(notif.datetime).toLocaleString() %></small>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <!-- Font Awesome for icons -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>
