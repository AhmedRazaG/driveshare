<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Car Listings - DriveShare</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="/dashboard">DriveShare</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><a class="nav-link" href="/car/create">Create Listing</a></li>
      </ul>
    </div>
  </nav>
  <div class="container mt-4">
    <h2 class="mb-4">Available Car Listings</h2>
    <% if(listings.length === 0) { %>
      <p>No listings available. <a href="/car/create">Create a new listing</a>.</p>
    <% } else { %>
      <div class="row">
      <% listings.forEach(function(listing) { %>
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= listing.model %> (<%= listing.year %>)</h5>
              <p class="card-text">
                Mileage: <%= listing.mileage %> miles<br>
                Location: <%= listing.pickupLocation %><br>
                Price: $<%= listing.rentalPrice %>/day<br>
                Availability: <%= listing.availability %><br>
                <% if (listing.isBooked) { %>
                  <span class="badge badge-danger">Booked</span>
                <% } else { %>
                  <span class="badge badge-success">Available</span>
                <% } %>
              </p>
              <a href="/car/edit/<%= listing.id %>" class="btn btn-secondary btn-sm">Edit Listing</a>
            </div>
          </div>
        </div>
      <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>
